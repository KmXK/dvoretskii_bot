{$DOMAIN:localhost} {
    handle /api/* {
        reverse_proxy bot:8080
    }

    handle {
        reverse_proxy web:5173
    }

    log {
        output stdout
        format console
    }

    tls {$ACME_EMAIL}
}

grafana.{$DOMAIN:localhost} {
    reverse_proxy grafana:3000

    log {
        output stdout
        format console
    }

    tls {$ACME_EMAIL}
}

