(logging) {
    log {
        output stdout
        format console
    }
}

{$DOMAIN:localhost} {
    handle /api/* {
        reverse_proxy bot:8080
    }

    handle {
        root * /srv/web
        encode gzip zstd
        try_files {path} /index.html
        file_server
    }

    import logging
    tls {$ACME_EMAIL}
}

grafana.{$DOMAIN:localhost} {
    reverse_proxy grafana:3000
    import logging
    tls {$ACME_EMAIL}
}
